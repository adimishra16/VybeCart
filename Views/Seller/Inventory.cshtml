        margin-top:90px;
    }
    .card {
        border: 1px solid #ddd;
        border-radius: 10px;
        margin: 10px;
        padding: 10px;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease;
        background-color: #fff;
    }

    .card:hover {
        transform: scale(1.05);
    }

    .card img {
        height: 200px;
        object-fit: cover;
        border-radius: 10px 10px 0 0;
    }

    .card-body {
        padding: 10px;
    }

    .card-title {
        font-size: 18px;
        font-weight: bold;
        color: #333;
    }

    .card-text {
        font-size: 14px;
        color: #555;
    }

    .btn-add-stock, .btn-remove-stock {
        width: 48%;
        padding: 8px;
    }

    .btn-add-stock {
        background-color: #007bff;
        color: white;
    }

    .btn-remove-stock {
        background-color: #dc3545;
        color: white;
    }

    .modal-content {
        border-radius: 8px;
    }

    .modal-header {
        background-color: #f7f7f7;
        border-bottom: 1px solid #ddd;
    }

    .modal-footer {
        border-top: 1px solid #ddd;
    }

    .modal-body input {
        margin-top: 10px;
    }
</style>
